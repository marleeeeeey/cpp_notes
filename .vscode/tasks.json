{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "001. Options: -DLINK_GOOGLE_TEST=ON",
      "command": "python ./scripts/vscode_tasks_generator.py --test",
      "type": "shell",
    },
    {
      "label": "001. Options: -DLINK_GOOGLE_BENCHMARK=OFF",
      "command": "python ./scripts/vscode_tasks_generator.py --benchmark",
      "type": "shell",
    },
    {
      "label": "001. Options: -DCMAKE_BUILD_TYPE=Release",
      "command": "python ./scripts/vscode_tasks_generator.py --config",
      "type": "shell",
    },
    {
        "label": "007. Git submodule update",
        "command": "git submodule update --init --recursive",
        "type": "shell"
    },
    {
      "label": "010. Set Current File As Sourse",
      "command": "cmake -E echo ${file} > file_to_build.txt && python ${workspaceFolder}/scripts/replace_slashes.py",
      "type": "shell",
      "options": {
        "statusbar": {
          "hide": false,
          "label": "SetCurrentFileAsSourse"
        }
      },
    },
    {
      "label": "001. Options: -DCMAKE_CXX_STANDARD=23",
      "command": "python ./scripts/vscode_tasks_generator.py --standard",
      "type": "shell",
    },
    {
      "label": "001. Options: parse_deleaker_report.py --no-verbose",
      "command": "python ./scripts/vscode_tasks_generator.py --deleaker_verbose",
      "type": "shell",
    },
    {
      "label": "020. + Configure",
      "command": [
        "cmake -E cat file_to_build.txt && cmake -S . -B build/release -DCMAKE_BUILD_TYPE=Release -GNinja -DCMAKE_CXX_STANDARD=23 -DCMAKE_CXX_FLAGS=-O2 -DCMAKE_CXX_COMPILER=clang++ -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DLINK_GOOGLE_TEST=ON -DLINK_GOOGLE_BENCHMARK=OFF&& cmake -E copy build/release/compile_commands.json build/compile_commands.json"
      ],
      "options": {
        "statusbar": {
          "hide": true,
          "label": "Configure"
        }
      },
      "type": "shell"
    },
    {
      "label": "030. + Build",
      "command": " cmake --build build/release -- -k 0 ",
      "dependsOn": [
        "020. + Configure"
      ],
      "options": {
        "statusbar": {
          "hide": false,
          "label": "Build"
        }
      },
      "type": "shell"
    },
    {
      "label": "040. + Build and Run",
      "command": "${workspaceFolder}/build/release/cpp_file_example.exe",
      "dependsOn": [
        "030. + Build"
      ],
      "options": {
        "statusbar": {
          "hide": false,
          "label": "Build and Run"
        }
      },
      "type": "shell"
    },
    {
      "label": "050. + Build and Run with Deleaker",
      "command": "DeleakerConsole.exe --export-xml-report-on-exit leak_report.xml --run ${workspaceFolder}/build/release/cpp_file_example.exe /someOption && python ${workspaceFolder}/scripts/parse_deleaker_report.py --no-verbose",
      "dependsOn": [
        "030. + Build"
      ],
      "options": {
        "statusbar": {
          "hide": false,
          "label": "RunWithDeleaker"
        }
      },
      "type": "shell"
    },
    {
      "label": "040. + Run Latest",
      "command": "${workspaceFolder}/build/release/cpp_file_example.exe",
      "options": {
        "statusbar": {
          "hide": false,
          "label": "Run Latest"
        }
      },
      "type": "shell"
    },
    {
      "label": "090. Compile ACTIVE file to ASM",
      "type": "shell",
      "command": "cmake -E make_directory build && clang -O1 -g0 -mllvm --x86-asm-syntax=intel -S ${file} -o ${workspaceFolder}/build/${fileBasename}.s",
      "args": [],
      "dependsOn": [
        "G010. Create Build Directory"
      ]
    },
    {
      "label": "095. Calc Links Progress to Mermaid Pie Chart",
      "command": "python ./scripts/mermaid_pie_chart_generation.py && ./PROGRESS.md",
      "type": "shell",
      "options": {
        "statusbar": {
          "hide": false,
          "label": "PieChart"
        }
      },
    },
  ]
}